<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="typeHandlers">
			<list>
				<bean class="cherry.spring.fwcore.type.mybatis.DeletedFlagTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.FlagCodeTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.JodaDateTimeTypeHandler" />
				<bean
					class="cherry.spring.fwcore.type.mybatis.JodaLocalDateTimeTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.JodaLocalDateTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.JodaLocalTimeTypeHandler" />
				<bean
					class="cherry.spring.fwcore.type.mybatis.SecureBigDecimalTypeHandler" />
				<bean
					class="cherry.spring.fwcore.type.mybatis.SecureBigIntegerTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.SecureIntegerTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.SecureLongTypeHandler" />
				<bean class="cherry.spring.fwcore.type.mybatis.SecureStringTypeHandler" />
			</list>
		</property>
	</bean>

</beans>
